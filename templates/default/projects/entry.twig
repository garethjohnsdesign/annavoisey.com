{% set bodyClass = 'project' %}

{% extends "_layouts/site" %}

{% block main %}

<!-- Title -->
<section class="grid-container">
<div class="grid-x grid-padding-y align-center project__meta">
  <div class="small-8 medium-7 large-7 cell text-center">
    <h1 class="h3">{{ entry.client }} — {{ entry.project }}</h1>
  </div>
</div>
</section>
<!-- End Title -->

<!-- Layout -->
<section class="grid-container">
{% include "_includes/blocks/layout" %}
</section>
<!-- End Layout -->

<!-- Images -->
